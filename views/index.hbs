                <td>Коеф. ризику</td>
                <td>Висновок</td>
                <td>Рік спостережень</td>
            </tr>

            <tr class="row">
                {{#each Pollution}}
                    {{Table1 this.ObjectNumber this.ElementNumber this.CW this.YearOfData}}
                {{/each}}
            </tr>
        </table>

        <table id="table3">
